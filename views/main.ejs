            <input type = "hidden" value = "<%=favoriteColor%>" name = "favoriteColor">
            <input type = "hidden" value = "<%=favoriteGenre%>" name = "favoriteGenre">
            <input type = "hidden" value = "<%=location%>" name = "location">
                Save 
        </button>
        </form>
        <form action ='/' method = "GET">
            <button type ="submit" id = "refreshBut" type="button" class = "refBut">
                    Refresh 
                <img class="refresh" src="refresh.png">
            </button>
            </form>
        </div>
    </div>
</body>
</html>

